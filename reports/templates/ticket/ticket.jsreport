<html>

<head>
    <style>
        .receipt {
            font-size: 12px;
            line-height: 70%;
        }

        .no-lh {
            line-height: 100%;
        }

        .company {
            text-align: center;
        }

        .company span {
            display: block;
        }

        .line-block {
            text-align: center;
        }

        .small {
            font-size: 0.9em;
        }

        .normal {
            font-size: 1.25em;
            line-height: 100%;
        }

        .large {
            font-size: 1.5em;
            line-height: 100%;
        }

        .left {
            text-align: left;
        }

        .center {
            text-align: center;
        }

        .right {
            text-align: right;
        }

        .italic {
            font-style: italic;
        }

        .bold {
            font-style: bold;
        }

        .underline {
            font-style: underline;
        }

        table {
            width: 100%;
        }

        td.modifier { padding-left:1em; }
    </style>
</head>

<body>
    <div class="receipt">
        <p class="company no-lh">
            <span class="large">{{:company.COMPANY_NAME}}</span>
            <span>{{:company.ADDRESS_FIRST}}</span> {{if company.ADDRESS_SECOND !== null}}
            <span>{{:company.ADDRESS_SECOND}}</span> {{/if}}
            <span>{{:company.ADDRESS_CITY}}, {{:company.ADDRESS_STATE}} {{:company.ADDRESS_ZIP}}</span>
            <span>{{:company.COMPANY_TELEPHONE}}</span>
        </p>

        {{if LINE_BLOCK_TOP}}
            <p class="line-block no-lh">
                <table>
                    {{for LINE_BLOCK_TOP}}
                        <tr><span class="{{:TEXT_CLASS}}">{{:CONTENT}}</span></tr>
                    {{/for}}
                </table>
            </p>
        {{/if}}

        <p class="ticket-info">
            <table>
                <tr>
                    <td class="left">Server: {{:ticket.USER_NAME}}</td>
                    <td class="right">{{:ticket.DATE}}</td>
                </tr>
                <tr>
                    <td class="left">
                        {{if ticket.TABLE_NUMBER}} Table: {{:ticket.TABLE_NUMBER}} {{else ticket.CUSTOMER_NAME}} Customer: {{:ticket.CUSTOMER_NAME}}
                        {{/if}}
                    </td>
                    <td class="right">{{:ticket.TIME}}</td>
                </tr>
                <tr>
                    <td class="left">Guests: {{:ticket.NUMBER_OF_GUESTS}}</td>
                    <td class="right">{{:ticket.ID}}</td>
                </tr>
            </table>
        </p>

        <p class="items">
            <table>
                {{for ticket.ITEMS}}
                    <tr>
                        <td class="left">{{:ITEM_NAME}}</td>
                        <td class="right">{{:ITEM_PRICE}}</td>
                    </tr>
                    {{for ITEM_MODIFIERS}}
                        <tr>
                            <td class="modifier">{{:MODIFIER_NAME}}</td>
                            {{if MODIFIER_PRICE}}
                            <td class="right">{{:MODIFIER_PRICE}}</td>
                            {{/if}}
                        </tr>
                    {{/for}}
                {{/for}}
            </table>
        </p>

        <p class="totals">
            <table>
                <tr>
                    <td class="left"></td>
                    <td class="right"></td>
                </tr>
                <tr></tr>
                <tr>

                </tr>
            </table>
        </p>

        {{if LINE_BLOCK_BOTTOM}}
            <p class="line-block no-lh">
                <table>
                    {{for LINE_BLOCK_BOTTOM}}
                        <tr><span class="{{:TEXT_CLASS}}">{{:CONTENT}}</span></tr>
                    {{/for}}
                </table>
            </p>
        {{/if}}
    </div>
</body>

</html>